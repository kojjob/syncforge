{
  "name": "@syncforge/react",
  "version": "0.1.0",
  "description": "React hooks and components for SyncForge real-time collaboration",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "phoenix": ">=1.7.0"
  },
  "dependencies": {
    "@syncforge/core": "workspace:*"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "jsdom": "^25.0.0",
    "phoenix": "^1.7.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "keywords": ["syncforge", "react", "hooks", "real-time", "collaboration", "phoenix"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kojjob/syncforge.git",
    "directory": "packages/react"
  }
}
